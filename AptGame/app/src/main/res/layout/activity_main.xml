<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_system_main_background_1"
        tools:context=".view.main.MainActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_shop"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="14dp"
            android:alpha="0.6"
            android:background="@drawable/shape_dim_black_r24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_navyblue_r20"
            app:layout_constraintBottom_toBottomOf="@id/cl_shop"
            app:layout_constraintEnd_toEndOf="@id/cl_shop"
            app:layout_constraintTop_toTopOf="@id/cl_shop">

            <ImageView
                android:id="@+id/iv_fire"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/text_bold_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="1,000 pt"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/cl_shop"
            app:layout_constraintStart_toStartOf="@id/cl_shop"
            app:layout_constraintTop_toTopOf="@id/cl_shop" />

        <FrameLayout
            android:id="@+id/fl_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_shop" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>