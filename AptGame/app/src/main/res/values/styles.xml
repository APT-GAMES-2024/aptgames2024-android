<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- text style -->
    <style name="text_bold_16">
        <item name="android:fontFamily">@font/dung_geun_mo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_normal_14">
        <item name="android:fontFamily">@font/dung_geun_mo</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="FullScreenDialog" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>